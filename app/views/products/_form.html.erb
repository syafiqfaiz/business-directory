<%= simple_form_for([@organisation, @product], html: { multipart: true }) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="info-block">
    <div class="form-group">
      <%= f.input :name%>
    </div>
    <div class="form-group">
      <%= f.input :description %>
    </div>
    <div class="form-group">
      <%= f.input :tag_input , label: raw("Tags. <br><small>separated by ','. Eg: car, vehicle, proton</small>")%>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="col-md-4 col-xs-10" ><%= f.input :price%></div>   
    </div>
    <div class="form-group">
      <div class="col-md-4 col-xs-10" ><%= f.input :product, as: :file, input_html: {multiple: 'multiple'}%></div>
      <% @product.product.each do |image| %>
        <%= image_tag(image.standard.url) %>
      <% end %>   
    </div>
  </div>

  <div class="col-xs-12">
    <div class="form-group clearfix">
      <%= f.button :submit, "Submit", class: "btn pull-right btn-default" %>
    </div>
  </div>
<% end %>
