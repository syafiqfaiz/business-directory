
<!--Listing Grid-->
<section class="block equal-height">
  <div class="row">
    <div class="col-md-9">
      <% @products.each do |product| %>
        <div class="col-md-3 col-sm-4">
          <div class="item">
            <div class="image">
              <div class="quick-view"><i class="fa fa-eye"></i><span>Quick View</span></div>
              <a href="item-detail.html">
                <div class="overlay">
                  <div class="inner">
                    <div class="content">
                      <h4>Description</h4>
                      <p><%= product.description %></p>
                    </div>
                  </div>
                </div>
                <img src="<%= product.product.first.url %>" alt="">
              </a>
            </div>
            <div class="wrapper">
              <a href="item-detail.html"><h3><%= product.organisation.name.capitalize %></h3></a>
              <figure><%= product.organisation.street.capitalize %></figure>
              <div class="info">
                <div class="type">
                  <% product.tags.each do |tag| %>
                    <span><%= tag.name.capitalize %></span>
                  <% end %>
                </div>
              </div>
            </div>
          </div><!-- /.item-->
        </div>
      <% end %>
    </div>

    <!--Sidebar-->
    <div class="col-md-3">
      <aside id="sidebar">
        <section>
          <header><h2>In the same category</h2></header>
          <% @companies.each do |company| %>
            <%= link_to(organisation_path(id: company.slug), class: "item-horizontal small") do %>
              <h3><%= company.name.capitalize %></h3>
              <figure><%= company.city.capitalize %></figure>
              <div class="wrapper">
                <div class="image"><img src="<%= company.organisation ? company.organisation.url : "item.jpg" %>" alt=""></div>
                <div class="info">
                  <%= company.state.capitalize %>
                </div>
              </div>
            <% end %>
          <% end %>
          <!--/.item-horizontal small-->
        </section>
        <section>
          <%= render 'categories/categories' %>
        </section>
      </aside>
      <!-- /#sidebar-->
    </div>
    <!-- /.col-md-3-->
    <!--end Sidebar-->
  </div><!-- row -->
</section>