<section class="container">
  <div class="row">
    <!--Company Detail Content-->
    <div class="col-md-9">
      <header>
        <h1 class="page-title"><%= @organisation.name %></h1>
      </header>
      <!--Logo and Map-->
      <section>
        <div class="row">
          <div class="col-md-4 col-sm-4">
            <div class="logo">
              <div class="image"><%= image_tag("organisation.png") %></div>
            </div>
          </div>
          <div class="col-md-8 col-sm-8">
            <div id="map-simple"></div>
          </div>
        </div>
      </section>
      <!--end Logo and Map-->
      <!--Contact info-->
      <section>
        <div class="row">
          <div class="col-md-4 col-sm-4">
            <section>
              <h3><i class="fa fa-map-marker"></i>Address</h3>
              <address>
                <div><%= @organisation.street.capitalize %></div>
                <div><%= @organisation.postcode %> <%= @organisation.city.capitalize %></div>
                <div><%= @organisation.city.capitalize %></div>
              </address>
            </section>
            <section>
              <h3><i class="fa fa-share-alt"></i>Social Profile</h3>
              <div class="social row">
                <%= link_to(@organisation.twitter, class: "social-button") do %>
                <i class="fa fa-twitter"></i>
                <% end %>
                <%= link_to(@organisation.facebook, class: "social-button") do %>
                <i class="fa fa-facebook"></i>
                <% end %>
                <%= link_to(@organisation.instagram, class: "social-button") do %>
                <i class="fa fa-instagram"></i>
                <% end %>
              </div>
            </section>
          </div>
          <div class="col-md-4 col-sm-4">
            <h3><i class="fa fa-envelope"></i>Contact</h3>
            <figure>
              <div class="info">
                <strong>Phone</strong><br>
                <span><%= @organisation.phone_number %></span>
              </div>
              <div class="info">
                <strong>Email</strong><br>
                <span><%= @organisation.email %></span>
              </div>
              <div class="info">
                <strong>Website</strong><br>
                <%= link_to(@organisation.website, @organisation.website) %>
              </div>
            </figure>
          </div>
          <div class="col-md-4 col-sm-4">
            <h3><i class="fa fa-file-text"></i>About Us</h3>
            <p>
              <%= @organisation.description %>
            </p>
          </div>
        </div>
      </section>
      <!--end Contact info-->
      <hr>
      
      <!--Company Items-->
      <section>
        <header><h2>Company Items</h2></header>
        <div class="expandable-content height collapsed show-380" id="company-items">
          <div class="content">
            <div class="row">
              <% @organisation.products.first(6).each do |product| %>
                <div class="col-md-4 col-sm-4">
                  <div class="item equal-height">
                    <div class="image">
                      <div class="quick-view"><i class="fa fa-eye"></i><span>Quick View</span></div>
                      <a href="item-detail.html">
                        <div class="overlay">
                          <div class="inner">
                            <div class="content">
                              <h4>Description</h4>
                              <p><%= product.description %></p>
                            </div>
                          </div>
                        </div>
                        <div class="item-specific">
                          <span title="Text"><%= product.name %></span>
                        </div>
                        <div class="icon">
                          <i class="fa fa-thumbs-up"></i>
                        </div>
                        <%= image_tag("item.jpg") %>
                      </a>
                    </div>
                    <div class="wrapper">
                      <a href="item-detail.html"><h3><%= product.name %></h3></a>
                      <figure>63 Birch Street</figure>
                      <div class="info">
                        <div class="type">
                          <i class="fa fa-cutlery"></i>
                          <span>Restaurant</span>
                        </div>
                        <div class="rating" data-rating="4"></div>
                      </div>
                    </div>
                  </div>
                  <!-- /.item-->
                </div>
                <!--/.col-sm-4-->
              <% end %>
            </div>
          </div>
        </div>
        <div class="center">
          <a href="#" class="show-more expand-content" data-expand="#company-items" >Show More</a>
        </div>
      </section>
      <!--end Company Items-->
    </div>
    <!-- /.col-md-8-->
    <!--Sidebar-->
    <div class="col-md-3">
      <aside id="sidebar">
        <section>
          <header><h2>In the same category</h2></header>
          <a href="item-detail.html" class="item-horizontal small">
            <h3>Cash Cow Restaurante</h3>
            <figure>63 Birch Street</figure>
            <div class="wrapper">
              <div class="image"><%= image_tag("item.jpg") %></div>
              <div class="info">
                <div class="type">
                  <i class="fa fa-cutlery"></i>
                  <span>Restaurant</span>
                </div>
                <div class="rating" data-rating="4"></div>
              </div>
            </div>
          </a>
          <!--/.item-horizontal small-->
          <a href="item-detail.html" class="item-horizontal small">
            <h3>Blue Chilli</h3>
            <figure>2476 Whispering Pines Circle</figure>
            <div class="wrapper">
              <div class="image"><%= image_tag("item.jpg") %></div>
              <div class="info">
                <div class="type">
                  <i class="fa fa-cutlery"></i>
                  <span>Restaurant</span>
                </div>
                <div class="rating" data-rating="3"></div>
              </div>
            </div>
          </a>
          <!--/.item-horizontal small-->
          <a href="item-detail.html" class="item-horizontal small">
            <h3>Eddieâ€™s Fast Food</h3>
            <figure>4365 Bruce Street</figure>
            <div class="wrapper">
              <div class="image"><%= image_tag("item.jpg") %></div>
              <div class="info">
                <div class="type">
                  <i class="fa fa-cutlery"></i>
                  <span>Restaurant</span>
                </div>
                <div class="rating" data-rating="5"></div>
              </div>
            </div>
          </a>
          <!--/.item-horizontal small-->
        </section>
        <section>
          <header><h2>Categories</h2></header>
          <ul class="bullets">
            <li><a href="#" >Restaurant</a></li>
            <li><a href="#" >Steak House & Grill</a></li>
            <li><a href="#" >Fast Food</a></li>
            <li><a href="#" >Breakfast</a></li>
            <li><a href="#" >Winery</a></li>
            <li><a href="#" >Bar & Lounge</a></li>
            <li><a href="#" >Pub</a></li>
          </ul>
        </section>
      </aside>
      <!-- /#sidebar-->
    </div>
    <!-- /.col-md-3-->
    <!--end Sidebar-->
  </div><!-- /.row-->
</section>
    <!-- /.container-->